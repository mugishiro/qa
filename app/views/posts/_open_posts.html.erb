<ul class="list-unstyled">
  <% posts.each do |post| %>
    <%= link_to user_post_path(post.user, post) do %>
      <li class="media mb-3">
        <div class=" mr-2">
          <%= image_tag("#{post.user.image_url}", :size => "60x60", :class => "rounded-circle") %>
        </div>
        <div class="media-body">
          <h5><%= post.user.username %></h5>
          <p><%= post.content %></p>
          <%= link_to '削除', [post.user, post], method: :delete, data: { confirm: "この質問を削除しますか？" },
              class: 'btn btn-danger' %>
          <%= form_with(model: [post.user, post], local: true) do |f| %>
              <%= f.submit '締め切る', class: 'btn btn-primary btn-block p-3' %>
          <% end %>
        </div>
      </li>
    <% end %>
  <% end %>
  <%= paginate posts %>
</ul>
